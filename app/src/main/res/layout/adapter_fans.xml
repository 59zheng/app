<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:paddingStart="20dp"
    android:paddingEnd="10dp"
    android:paddingTop="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@drawable/fans_bj"
        android:paddingStart="5dp"
        android:paddingEnd="5dp"
        android:backgroundTint="@color/white"
        android:gravity="center_horizontal"
        android:paddingTop="10dp"
        android:orientation="vertical">

        <com.xuexiang.xui.widget.imageview.RadiusImageView
            android:id="@+id/headPortrait"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/icon_circular"
            android:padding="3dp"
            app:riv_is_circle="true"
            android:src="@mipmap/logo" />

        <TextView
            android:id="@+id/my_name"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5dp"
            android:text="张老二"
            android:textColor="@color/black"
            android:textSize="17sp"
            android:textStyle="bold"
            android:typeface="normal" />

        <TextView
            android:id="@+id/my_signature"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5dp"
            android:text="张老二"
            android:textColor="@color/gray_9b"
            android:textSize="@dimen/text_size_13"
            android:textStyle="bold"
            android:typeface="normal" />

        <LinearLayout
            android:id="@+id/trending_ok"
            android:layout_width="60dp"
            android:layout_height="20dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/bynamic_text"
            android:backgroundTint="@color/home_text_click">

            <TextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="取消关注"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_13">

            </TextView>

        </LinearLayout>

    </LinearLayout>


</LinearLayout>